doctype
html(lang=config.language)
    head
        include head
    body
        div#facebook-area.
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.8&appId=219934224732930";
            fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>
        .wrap
            header
                a.logo-link(href=url_for())
                    div.site-name Otsu.info
                include nav
            section.container
                include sidebar
                block container
            footer
                block copyright
        include scripts
