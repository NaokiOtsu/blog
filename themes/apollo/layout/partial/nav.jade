ul.nav.nav-list
    each value, key in theme.menu
        li.nav-list-item
            - var re = /^(http|https):\/\/*/gi;
            - var tar = re.test(value) ? "_blank" : "_self"
            - var page_path = page.path
            - var path = page_path.replace(/\/[0-9a-zA-Z\.]*/, "/")
            - var act = !re.test(value) && "/" + path === value
            a.nav-list-link(class={active: act} href=value target=tar)
                != key
div(style="display:none;")
    if page.layout === "post"
        hoge
